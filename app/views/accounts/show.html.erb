<style>
  .profile-section {
    font-family: Arial, sans-serif;
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .profile-section h1 {
    color: #333;
    text-align: center;
  }

  .profile-section p {
    color: #666;
    line-height: 1.6;
  }

  .button-bar {
    display: flex;
    justify-content: center;
    gap: 10px;
  }

  .button-bar button,
  .button-bar input[type="submit"] {
    padding: 10px 20px;
    border: none;
    background-color: #007bff;
    color: white;
    text-transform: uppercase;
    cursor: pointer;
    border-radius: 4px;
    font-size: 14px;
  }

  .button-bar button:hover,
  .button-bar input[type="submit"]:hover {
    background-color: #0056b3;
  }
</style>

<div class="profile-section">
  <h1>Your Profile</h1>
  <p>Name: <%= @user.name %></p>
  <p>Email: <%= @user.email %></p>
  <p>Address: <%= @user.address %></p>
  <p>Province: <%= @user.province.province_name %></p>
  <p>Postal Code: <%= @user.postal_code %></p>

  <div class="button-bar">
    <button id="edit-profile-btn">Edit Profile</button>

    <%= form_tag logout_path, method: :delete do %>
      <%= submit_tag 'Logout' %>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.getElementById('edit-profile-btn').addEventListener('click', () => {
      window.location.href = '<%= edit_account_path %>';
    });
  });
</script>
