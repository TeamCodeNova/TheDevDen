
<!-- app/views/accounts/show.html.erb -->
<h1>Your Profile</h1>
<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email %></p>
<p>Address: <%= @user.address %></p>
<p>Province: <%= @user.province.province_name %></p>
<%= link_to 'Edit Profile', edit_account_path %>

<%= form_tag logout_path, method: :delete do %>
  <%= submit_tag 'Logout' %>
<% end %>
