<style>
  .form-container {
    font-family: Arial, sans-serif;
    max-width: 600px;
    margin: 20px auto;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    background: #fff;
  }

  .form-container h1 {
    color: #333;
    text-align: center;
    margin-bottom: 20px;
  }

  .form-container .field {
    margin-bottom: 10px;
    width: 97%;
  }

  .form-container .field label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }

  .form-container .field input[type="text"],
  .form-container .field input[type="email"],
  .form-container .field input[type="password"] {
    width: 100%;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .form-container .field select {
    width: 103%;
    padding-top: 8px;
    padding-bottom: 8px;
    padding-right: 0px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .form-container .actions {
    text-align: center;
    margin-top: 20px;
  }

  .form-container .actions input[type="submit"],
  .button-link {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    text-decoration: none;
  }

  .form-container .actions input[type="submit"]:hover,
  .button-link:hover {
    background-color: #0056b3;
  }
</style>

<div class="form-container">
  <h1>Edit Your Profile</h1>

  <%= form_for @user, url: update_account_path, method: :patch do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :postal_code %>
      <%= f.text_field :postal_code %>
    </div>

    <div class="field">
      <%= f.label :province %>
      <%= f.collection_select :province_id, Province.all, :id, :province_name, { selected: @user.province_id }, { prompt: 'Select province' } %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit 'Update Profile' %>
    </div>
  <% end %>

  <%= link_to 'Back to Profile', account_path, class: 'button-link' %>
</div>
